{
    "compilerOptions": {
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "baseUrl": ".",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "paths": {
            "@homework-task/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "build/lib",
        "scripts",
        "es",
        "lib",
        "tests/**",
        ".storybook/**",
        ".idea",
        ".html",
        "src/**/*.test.js",
        "src/**/*.test.ts",
        "src/**/*.stories.js",
        "src/**/*.stories.ts",
        "src/types"
    ]
}
